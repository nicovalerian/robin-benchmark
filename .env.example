# ROBIN Benchmark Environment Configuration
# Copy this file to .env and fill in your API keys

# =============================================================================
# API Keys for Model Inference (Phase 2)
# =============================================================================

# OpenAI (GPT-4o, GPT-5-nano)
OPENAI_API_KEY=sk-...

# Anthropic (Claude 3.5 Sonnet)
ANTHROPIC_API_KEY=sk-ant-...

# Google AI Studio (Gemini, Gemma)
GOOGLE_API_KEY=...

# Together AI (Llama-4, Qwen, Mistral)
TOGETHER_API_KEY=...

# Groq (Fast inference for Llama, Mixtral)
GROQ_API_KEY=gsk_...

# HuggingFace (Cendol, Indonesian models)
HUGGINGFACE_API_KEY=hf_...

# =============================================================================
# Optional Settings
# =============================================================================

# Default judge model for Phase 3
JUDGE_MODEL=gpt-4o

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Maximum concurrent API requests
MAX_CONCURRENT_REQUESTS=5

# Rate limit delay (seconds between requests)
RATE_LIMIT_DELAY=0.5
